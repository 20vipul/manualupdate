{
  "name": "manualupdate",
  "version": "1.0.2",
  "description": "to test more functionality for electron updater",
  "main": "main.js",
  "author": "vipul",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build -p never",
    "publish" : "electron-builder --publish always"
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-log": "^5.1.7",
    "electron-updater": "^6.2.1"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "20vipul",
        "repo": "manualupdate"
      }
    ],
    "appId": "com.github.20vipul.manualupdate",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": true
    }
  }
}
